---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-[60vh] w-full max-w-md mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 text-center">Guess the Instrument!</h1>
    
    <p class="text-lg mb-10 text-center">Choose your language / Alege limba</p>
    
    <div class="flex flex-col sm:flex-row gap-6 w-full justify-center">
      <a 
        href="/en" 
        class="bg-white hover:bg-blue-50 text-blue-600 font-semibold py-4 px-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-200 text-center text-lg flex-1 max-w-[200px]"
      >
        English
      </a>
      
      <a 
        href="/ro" 
        class="bg-white hover:bg-red-50 text-red-600 font-semibold py-4 px-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-200 text-center text-lg flex-1 max-w-[200px]"
      >
        Română
      </a>
    </div>
    
    <div class="mt-12 text-center text-gray-500">
      <p>© 2025 Musical Guess Game</p>
    </div>
  </div>
</Layout>
